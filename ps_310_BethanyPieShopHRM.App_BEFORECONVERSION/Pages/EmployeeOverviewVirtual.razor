@page "/employeeoverviewvirtual"

<h3>Employee Overview Virtual</h3>

@if (employeeTemps == null)
{


    <p>Loading...</p>
}
else
{

    <table class="table">
        <thead>
            <tr>
                <th>Employee ID</th>
                <th>First Name</th>
                <th>Last Name</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var employee in employeeTemps)
            {
                <tr>
                    <td>@employee.ID</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                </tr>
            }
        </tbody>
    </table>

}
